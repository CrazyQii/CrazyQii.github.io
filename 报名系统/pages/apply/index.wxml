<!--pages/apply/index.wxml-->
<view>羽毛球比赛信息注册</view>
<form bindsubmit="submit">
	<view>姓名:<input type="text" name="name" value="{{name}}" placeholder="请输入你的姓名"/></view>
	<radio-group name="gender">
		<label for="female">男生</label>
		<radio name="female" value="1" checked="checked"></radio>
		<label for="male">女生</label>
		<radio name="male" value="0"></radio>
	</radio-group>
	<view>电话号码：<input type="number" name="call" value="{{phone}}" placeholder="请输入你的电话号码" /></view>
	<view>
		<picker mode="selector" range="{{institutes}}" name="institute" value="{{myInstitute}}" bindchange="showInstitute">选择学院：</picker>
		<text>{{myInstitute}}</text>
	</view>
	<view>学号：<input type="number" name="id" value="{{id}}" placeholder="请输入你的学号" /></view>
	<button form-type="submit">确认提交</button>
	<button form-type="reset">清除信息</button>
</form>
